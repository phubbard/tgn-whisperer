# TGN-Whisperer Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# SMTP / Email Configuration
# =============================================================================
SMTP_SERVER=smtp.fastmail.com
SMTP_PORT=465
SMTP_USERNAME=your-email@example.com
# SMTP password - required for sending emails
FASTMAIL_PASSWORD=your-smtp-password-here

# System admin email address (used as sender and for failure alerts)
SYSTEM_ADMIN_EMAIL=your-admin-email@example.com

# Contact email for HTTP request headers
CONTACT_EMAIL=your-contact-email@example.com

# =============================================================================
# Transcription API Configuration
# =============================================================================
TRANSCRIPTION_API_BASE_URL=http://your-transcription-server.local:5051

# =============================================================================
# Deployment Configuration
# =============================================================================
# Base path for deploying static sites
DEPLOY_BASE_PATH=/usr/local/www

# Working directory for Prefect flows
PREFECT_WORKING_DIRECTORY=/path/to/your/tgn-whisperer

# =============================================================================
# Claude/Anthropic API Configuration
# =============================================================================
# API key for Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Claude model to use for speaker attribution
CLAUDE_MODEL=claude-sonnet-4-5
CLAUDE_MAX_TOKENS=2000

# =============================================================================
# Default URLs
# =============================================================================
DEFAULT_PODCAST_URL=https://thegreynato.com/

# =============================================================================
# User Agent for HTTP requests
# =============================================================================
HTTP_USER_AGENT=tgn-whisperer https://github.com/phubbard/tgn-whisperer/
